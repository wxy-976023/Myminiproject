/* components/tab-control/x-tab-control.wxss */
.tab-control{
  padding-top: 20rpx;
  display: flex;
  background-color: #fff;
  padding-bottom: 20rpx;
}
.tab-control-item {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
}
.active {
  color: #ff5777;
}
.active .text {
  border-bottom: 8rpx solid #ff5777;
}