<!--pages/image/image.wxml-->
<text>pages/image/image.wxml</text>
<!-- 1.image可以写成单标签，双标签
2.image默认大小：320*240
3.image是一个行内块级元素 -->
<!-- 1.src="本地路径/远程地址" -->
<image src="./../../assets/img/1.jpg"></image>
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
<!-- 2.src补充：相册中的图片 -->
<button bindtap="handleChooseAlbum">选中图片</button>
<image src="{{ImagePath}}"></image>
<!-- 3.bindload监听图片加载完成
    和lazy-load 图片的懒加载 -->
  <image wx:for="{{10}}" 
        src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
         bindload="IamgeAllLoad"
         lazy-load></image>
<!-- 4.长按图片识别小程序码 -->
<image  show-menu-by-longpress
        src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>